<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
        <mapper namespace="com.xzy.dao.UserDao">
        <select id="findById" parameterType="int" resultType="com.xzy.entity.User">
         	select *from user where id=#{id}
        </select>
       
        <select id="findByUsername" parameterType="string" resultType="com.xzy.entity.User">
        select * from user where username=#{username}
        </select>
        <!-- 用户注册 -->

        <insert id="findAdd" parameterType="com.xzy.entity.User" >

           insert into
                  user
              (
                  name,
                  password,
                  nick_name,
                  sex,
                  phone,
                  email,
                  dept_id,
                  location,
                  company_id

              )  

                  

               values
               (
                 #{name},
                 #{password},                
                 #{nickName},
                 #{sex},
                 #{phone},
                 #{email},
                 #{deptId},
                 #{location},
                 #{companyId}

               )
     </insert>
     <!-- 用户登录 -->
      <select id="findByUsernameAndPwd"  parameterType="map" resultType="com.xzy.entity.User">
            select name,password from user  where name=#{name} and password=#{password}
      
      </select> 
      </mapper>    
     
        
      